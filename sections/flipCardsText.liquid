<div class="flip-section-container">
  <div>
    <h3 class="flip-title">{{ section.settings.heading }}</h3>
  </div>      
  <div class="flip-container">
    {%for block in section.blocks %}
      <div class="flip-card">
        <div class="flip-card-inner">
          <div class="flip-card-front">
             <div class="flip-card-front-text"> <h2>{{block.settings.subtitule}}</h2> 
<!--              <img src="{{block.settings.image | img_url:'master'}}" class="image"/>
         </div> -->
        <div class="flip-card-back" style="background-image: url('{{ block.settings.image-back | img_url:'master'}})'">
<!--            <h2>{{block.settings.title}}</h2>
           <p>{{block.settings.description}}</p> -->
            <a href="{{block.settings.url}}" class="btn-flip-card">{{block.settings.description}}</a>
            </div>    
      </div>
    
    </div>
         
        {%endfor%}
      </div>
</div>

{% schema %}
{
    "name": "Flip Cards Text",
    "settings": [
        {
            "type": "textarea",
            "label": "Aqui puedes modificar el titulo de la seccion",
            "id": "heading"
        }
    ],
    "blocks": [
          {
            "type": "image",
            "name": "image block",
            "settings": [
                {
                    "type": "image_picker",
                    "label": "your-image",
                    "id": "image"
                }, 
  			{
            "type": "text",
            "label": "the url of the image",
            "id": "url"
      		  },
              	{
            "type": "text",
            "label": "the title of the front cover",
            "id": "subtitle"
      		  },
            	{
            "type": "text",
            "label": "ingrese el texto del boton",
            "id": "description"
      		  },
                          			{
            "type": "text",
            "label": "ingrese el titulo de la imagen",
            "id": "title"
      		  },
              {
              "type": "image_picker",
                    "label": "your-image-back",
                    "id": "image-back"
              }
            ]
        }
    ],
"presets": [
	{
	"category": "image",
	"name": "Flip Cards"
}
]
}
{% endschema %}




